<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/forms.css">
<link rel="stylesheet" href="/css/product.css">
</head>

<body>
<%- include('../includes/navigation.ejs') %>
<main>
   <form class="product-form" action="/admin/products/<%= editing? `update/${product.id}`: ''%>" method="POST">
      <div class="form-control">
         <label for="title">Title:</label>
         <input required type="text" name="title" id="title" value="<%=  product.title %>">
      </div>
      <div class="form-control">
         <label for="description">Description:</label>
         <textarea required name="description" id="description" rows="4" cols="50"><%=product.description%></textarea>
      </div>
      <div class="form-control">
         <label for="imageUrl">Image Url:</label>
         <input required type="url" name="imageUrl" id="imageUrl" value="<%=product.imageUrl%>">
      </div>
      <div class="form-control">
         <label for="price">Price:</label>
         <input required type="number" name="price" id="price" value="<%=product.price%>">
      </div>
      <div class="form-control">
         <button class="btn" type="submit"><%= editing ? 'Update Product' :'Add Product'%></button>
      </div>
   </form>
</main>
<%- include('../includes/end.ejs') %>